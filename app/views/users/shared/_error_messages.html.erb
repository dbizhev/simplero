<% if resource.errors.any? %>
  <% resource.errors.full_messages.each do |message| %>
    <div class="mt-1 p-4 text-red-700 border rounded border-red-900/10 bg-red-50 text-error" role="alert">
      <strong class="text-sm font-medium text-error"> <%= message %> </strong>
    </div>
  <% end %>
<% end %>
